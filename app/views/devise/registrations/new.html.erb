<div class="flex flex-col items-center justify-center h-screen bg-gray-100">
  <!-- Add the required class for Tailwind CSS -->
  <h2 class="text-2xl font-bold mb-4">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :name, class: "font-medium" %>
      <%= f.text_field :name, autofocus: true, class: "mt-1 p-2 w-full rounded border-gray-300" %>
    </div>

    <div class="mb-4">
      <%= f.label :email, class: "font-medium" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 p-2 w-full rounded border-gray-300" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "font-medium" %>
      <% if @minimum_password_length %>
        <em class="text-gray-600 text-sm">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "mt-1 p-2 w-full rounded border-gray-300" %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, class: "font-medium" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 p-2 w-full rounded border-gray-300" %>
    </div>

    <div class="mb-4">
      <%= f.submit "Sign up", class: "bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
