<div class="flex flex-col items-center justify-center h-screen bg-gray-100">
  <!-- Add the required class for Tailwind CSS -->
  <h2 class="text-2xl font-bold mb-4">Forgot your password?</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-4">
      <%= f.label :email, class: "font-medium" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 p-2 w-full rounded border-gray-300" %>
    </div>

    <div class="mb-4">
      <%= f.submit "Send me reset password instructions", class: "bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
