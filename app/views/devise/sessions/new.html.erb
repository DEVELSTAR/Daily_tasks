<div class="flex flex-col items-center justify-center h-screen">
  <!-- Add the required class for Tailwind CSS -->
  <h2 class="text-2xl font-bold mb-4">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "block font-medium" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 p-2 w-full rounded border-gray-300" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block font-medium" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 p-2 w-full rounded border-gray-300" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-4">
        <%= f.check_box :remember_me, class: "mr-2" %>
        <%= f.label :remember_me, class: "font-medium" %>
      </div>
    <% end %>

    <div class="mb-4">
      <%= f.submit "Log in", class: "bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-4 rounded" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
