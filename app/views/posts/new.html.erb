<!-- app/views/posts/new.html.erb -->

<h1>Create a New Post</h1>

<%= form_with(model: @post, url: posts_path) do |form| %>
<div class="form-group">
    <%= form.label :english %>
    <%= form.text_field :english, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :math %>
    <%= form.text_field :math, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :science %>
    <%= form.text_field :science, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :period %>
    <%= form.text_field :period, class: "form-control" %>
  </div>
  <%= form.hidden_field :user_id, value: current_user.id %>
  <div class="form-group">
    <%= form.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to 'Back', posts_path %>
